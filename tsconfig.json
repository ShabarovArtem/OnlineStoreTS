{
  "compilerOptions": {
    "strict": true,  // Включает строгую проверку типов
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "client/**/*",   // Путь к файлам в папке client
    "server/**/*"    // Путь к файлам в папке server
  ],
  "exclude": [
    "node_modules",  // Исключаем node_modules
    "dist"           // Исключаем dist
  ]
}





